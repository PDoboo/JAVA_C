package p03.cast;

public class P103OperationsPromotion {

	public static void main(String[] args) {
		//연산식에서의 자동타입변환 
       byte byteValue1 = 10;
       byte byteValue2 = 20;
       // byte byteValue3 = byteValue1 + byteValue2;컴파일에러
       int intValue1 = byteValue1 + byteValue2;
       System.out.println(intValue1);
       
       char charValue1 = 'A';//A는 intValue-65
       char charValue2 = 1;
       // char charValue3 = charValue1 + charValue2;컴파일에러
       int intValue2 = charValue1 + charValue2;
       System.out.println("유니코드="+intValue2);
       System.out.println("출력문자="+(char)intValue2);//(char)캐스팅 연산자 사용해서강제변환
       //char타입으로 변환하는 이유는 문자출력 가능
       //65는A고 66은B
       
       int intValue3 =10;
       int intValue4 = intValue3/4;
       System.out.println(intValue4);
       
       int intValue5 = 10;
       // int intValue6 = 10; /4.0;컴파일에러
       double doubleValue = intValue5 / 4.0;
       System.out.println(doubleValue);
       
       int x =1;
       int y =2;
       double result = (double) x / y ;
       System.out.println(result);
	}

}
