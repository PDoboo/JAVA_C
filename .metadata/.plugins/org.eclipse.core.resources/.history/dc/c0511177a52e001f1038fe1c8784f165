package p04.output;

import java.util.Scanner;//import는 java.lang을 제외한 패키지인 경우 표시

public class P120ScannerEx {

	public static void main(String[] args) {
		//1번문제
		//이름: 감자바
		//나이: 25
		//전화: 010-123-4567
		String name ="감자바";
		int age =25;
		String tel1 = "010",tel2 ="123",tel3="4567";
		System.out.println("이름:"+name);
		System.out.println("나이:"+age);
		System.out.println("전화:"+tel1+'-'+tel2+'-'+tel3);
		
		//2번문제
		//키보드입력 -System.in.read();
		//nextInt()를 사용한경우
	    Scanner sc = new Scanner(System.in);
		System.out.print("첫번째 수: ");
        int i1 = sc.nextInt();
        System.out.print("두번째 수: ");
        int i2 = sc.nextInt();
        System.out.println("덧셈결과:"+(i1+i2));
        System.out.println();
        
        //nextline() 사용하면 문자열이 나옴
        
		System.out.print("첫번째 수: ");
       String i3 = sc.nextLine();
       System.out.print("두번째 수: ");
        String i4 = sc.nextLine();
        int num1=Integer.parseInt(i3);
        int num2=Integer.parseInt(i4);
        System.out.println("덧셈결과:"+(num1+num2));
        System.out.println();
//             
//        int num1= ;
//        int num2= ;
//        int result = num1+num2;
//        System.out.println("덧셈결과:"+result);
//        
//        [필수 정보 입력]
//        1. 이름: 
//        2. 주민번호 앞 6자리:
//        3. 전화번호 :
//        [입력된 내용]
//        1.이름:홍길동
//        2.주민번호 앞 6자리:123456
//        3.전화번호:010-456-7890
//	}

}
}
